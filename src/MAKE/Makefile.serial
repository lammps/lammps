# serial = RedHat Linux box, g++, no MPI, no FFTs

SHELL = /bin/sh

# System-specific settings

CC =		g++
CCFLAGS =	-g -O -I../STUBS -DFFT_NONE
DEPFLAGS =	-M
LINK =		g++
LINKFLAGS =	-g -O -L../STUBS
USRLIB =	-lmpi
SYSLIB =
ARCHIVE =	ar
ARFLAGS =	-rc
SIZE =		size

# Link target

$(EXE):	$(OBJ)
	$(LINK) $(LINKFLAGS) $(OBJ) $(USRLIB) $(SYSLIB) -o $(EXE)
	$(SIZE) $(EXE)

# Library target

lib:	$(OBJ)
	$(ARCHIVE) $(ARFLAGS) $(EXE) $(OBJ)

# Compilation rules

%.o:%.cpp
	$(CC) $(CCFLAGS) -c $<

%.d:%.cpp
	$(CC) $(CCFLAGS) $(DEPFLAGS) $< > $@

# Individual dependencies

DEPENDS = $(OBJ:.o=.d)
include $(DEPENDS)
