echo both
units		metal
atom_style	atomic

neighbor	0.3 bin
neigh_modify	 every 2 delay 10 check yes

variable	a equal 4.05
lattice		fcc $a 
region		box block 0 3 0 3 0 3
create_box	1 box
create_atoms	1 box

mass		1 26.98

group		Al type 1

pair_style 	pace
pair_coeff  * * Al.pbe.rhocore.ace Al

#dump		snap all cfg 10 ./dump.fcc.*.cfg mass type xs ys zs fx fy fz
#dump_modify	snap element Al

fix 1 all box/relax iso 0.0 vmax 0.001
min_style	cg
minimize	1.0e-10 1.0e-10 1000 1000

velocity        all create 600.03 8728
timestep        0.0005
fix		2 all nve

thermo 		1
thermo_style 	custom step etotal pe ke pxx pyy pzz press temp vol
print "Run NVE for 500 steps"
run		500
print "DONE"

