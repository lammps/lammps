    tmp := $(call kokkos_append_header,"\#define KOKKOS_ARCH_GFX901")
    KOKKOS_INTERNAL_ROCM_ARCH_FLAG := --amdgpu-target=gfx901 
  endif
 
  
  KOKKOS_INTERNAL_HCC_PATH := $(shell which $(CXX))
