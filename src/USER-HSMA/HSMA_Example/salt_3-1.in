processors * * *
units lj
atom_style full
boundary p p p

region box block 0 25 0 25 0 25
create_box 2 box
region middle block 0 25 0 25 0 25 
create_atoms 1 random 2250 667 middle # 667 is a random seed
create_atoms 2 random 750 536 middle # 536 is a random seed 

variable temperature equal 1.2
variable epsilon equal 0.285714
variable coul_cut equal 10.0
group ani type 1
group cat type 2
mass 1 1
mass 2 1
set type 1 charge -1
set type 2 charge 3   

fix energy all nve
thermo 2000
thermo_style custom step temp ke pe etotal
###Soft potential
neighbor  2.0 bin    
pair_style soft 1.0
pair_coeff * * 0.0
variable prefactor equal ramp(0,30)
fix 1 all adapt 1 pair soft a * * v_prefactor
fix lgv1 all langevin ${temperature} ${temperature} 100.0 81
timestep 0.001
run 2000
unfix 1
unfix lgv1  

#turn on electrostatics
pair_style lj/cut ${coul_cut}  
pair_coeff * * 1.0 1.0 1.122462048 
pair_modify shift yes

kspace_style HSMA 1.0e-4 1.3- 8 128 55.0 89.0 0 0 

dielectric ${epsilon}

neigh_modify delay 5 every 5 check no one 5000 binsize 6

thermo_modify line one
thermo 100

thermo_style custom step temp etotal elong

fix 1 all nvt temp 1.2 1.2 0.005

timestep 0.001

run 2000

compute msd cat msd com yes
variable twopoint equal c_msd[4]/6.0/(step*dt+1.0e-7)
fix store all vector 1 c_msd[4]
variable fitslope equal slope(f_store)/6.0/(100*dt)

thermo_style custom step temp c_msd[4] v_twopoint v_fitslope etotal

run 1200

compute vacf cat vacf
fix  5 cat vector 1 c_vacf[4] 
variable  diff equal dt*trap(f_5)
thermo_style custom step temp v_diff c_vacf[1] c_vacf[2] c_vacf[3] c_vacf[4]

thermo 1

run 1000
